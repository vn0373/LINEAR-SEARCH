
#include <stdio.h>

int main() {
    int n;
    printf("Enter the array size:");
    scanf("%d",&n);
    int arr[n];
    
    printf("Enter the elements:\n");
    int i;
    for(i=0;i<n;i++){
        scanf("%d",&arr[i]);
    }
    int t;
    printf("Enter the element to search:\n");
    scanf("%d",&t);
    for(i=0;i<n;i++){
        if(t==arr[i]){
            printf("The element %d is found at position %d\n",t,i+1);
        }
        else{
            printf("Element is not found in the array");
        }
    }
    return 0;
}
